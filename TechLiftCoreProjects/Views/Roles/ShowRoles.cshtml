@using Microsoft.AspNetCore.Identity;
@model List<IdentityRole>


<div style="left:50;top:50;background-color:lightslategray">
    <hr />
    <h1>Add Roles</h1>
    <hr />

<div class="form-group">
    <form asp-action="CreateRole" method="post">
        <div class="row">
            <div class="col-3">
                <input class="form-control" name="txtRole" />
            </div>
        </div>
        <div>
            <input type="submit" value="CreateRole" class="btn btn-danger" />
        </div>
    </form>
</div>

    <h1>All Roles</h1>
    <table class="table table-striped table-bordered">
        <tr style="background-color:lightblue;color:white;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
            <th>RoleId</th>
            <th>RoleName</th>
        </tr>
        @foreach(var Roles in Model)
        {
            <tr style="background-color:black;color:white">
                <td>@Roles.Id</td>
                <td>@Roles.Name</td>
            </tr>
        }
    </table>

</div>